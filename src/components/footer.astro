---
import HCard from "@/components/h-card.astro";
---

<div
	class="font-gummy flex items-end justify-center px-6 py-6 text-(--color-text-muted) lg:justify-between lg:px-8"
>
	<div class="hidden lg:block">
		<HCard />
	</div>
	<div class="flex flex-col items-center gap-2">
		<div class="webring flex items-center gap-2">
			<a
				href="https://blr.indiewebclub.org/webring/previous.html"
				aria-label="Previous site in webring"
				class="size-4 text-(--color-text-muted) hover:scale-110"
			>
				<span class="chevron-icon size-4" style="--icon-url: url(/icons/chevrons-left.svg);"></span>
			</a>
			<a
				href="https://blr.indiewebclub.org/"
				target="_blank"
				rel="noopener noreferrer"
				class="underline decoration-dashed underline-offset-4 hover:decoration-solid"
			>
				IndieWebClub Bangalore
			</a>
			<a
				href="https://blr.indiewebclub.org/webring/next.html"
				aria-label="Next site in webring"
				class="size-4 text-(--color-text-muted) hover:scale-110"
			>
				<span class="chevron-icon size-4" style="--icon-url: url(/icons/chevrons-right.svg);"
				></span>
			</a>
		</div>

		<p>copyright &copy; 2026, abhigyan trips.</p>
	</div>
	<button
		id="scroll-to-top"
		class="hidden size-10 cursor-pointer items-center justify-center rounded-full bg-(--color-text) text-(--color-bg) hover:scale-110 lg:flex"
		aria-label="Scroll to top"
	>
		<span class="scroll-icon size-5" style="--icon-url: url(/icons/chevrons-up.svg);"></span>
	</button>
</div>

<style>
	.scroll-icon,
	.chevron-icon {
		display: inline-block;
		background-color: currentColor;
		-webkit-mask-image: var(--icon-url);
		mask-image: var(--icon-url);
		-webkit-mask-size: contain;
		mask-size: contain;
		-webkit-mask-repeat: no-repeat;
		mask-repeat: no-repeat;
		-webkit-mask-position: center;
		mask-position: center;
	}
</style>

<script>
	function setupScrollToTop() {
		const scrollBtn = document.getElementById("scroll-to-top");

		scrollBtn?.addEventListener("click", () => {
			window.scrollTo({
				top: 0,
				behavior: "smooth",
			});
		});
	}

	document.addEventListener("astro:page-load", setupScrollToTop);
</script>
